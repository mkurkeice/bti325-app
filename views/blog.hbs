<div class="row">
    <section class="main col-md-9">
        {{#if data.posts}}
        <article>
            <h2>{{data.posts.title}}</h2>
            <img src="{{data.posts.featureImage}}" alt="feature Image" style="width:100%" />
            <br /><br />
            {{#safeHTML data.posts.body}}{{/safeHTML}}
            <br /><br />
            <strong>Category:</strong>{{data.posts.category}}<br />
            <strong>Last Updated:</strong>{{data.posts.postDate}}
        </article>
        {{else}}
            <div class="col-md-12 text-center">
                <h2>{{data.message}}</h2>
                <p>Please try another Post / Category</p>
            </div>
        {{/if}}
    </section>
    <aside class="col-md-3">
        {{#if data.posts}}
        <br /><br />
        <h4>Posts</h4>
        <ul class="list-group">
            {{#each data.posts}}
                <a href="/blog/id?category={{../viewingCategory}}" class="list-group-item">{{title}}</a>
            {{/each}}
        </ul>      
        {{/if}} 
        {{#if data.categories}}
        <h4>Categories</h4>
        <ul class="list-group">
            {{#each data.posts}}
                <a href="/blog/id?category=id" class="list-group-item">{{category}}</a>
            {{/each}}
        </ul>
        {{/if}}
    </aside>
</div>